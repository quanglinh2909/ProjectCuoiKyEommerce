<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:minWidth="300dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Payment success"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor_sans"
        android:textFontWeight="400"
        android:textSize="18sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="40dp"

        android:layout_height="wrap_content"
        android:src="@drawable/ic_submit" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your payment was success"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_checkout_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/under_line"
        android:layout_marginTop="20dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate your purchase"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        >
        <ImageView
            android:src="@drawable/ic_disappointed"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_happy" />
        <ImageView
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btn_submit"
            android:text="Submit"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:fontFamily="@font/tenor_sans"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_back"
            android:text="Back to home"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:fontFamily="@font/tenor_sans"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>