<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectAddressActivity">
    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/btnBackAddAddress"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_back_24_black" />

       <RelativeLayout
           android:layout_toRightOf="@id/btnBackAddAddress"
           android:layout_marginLeft="20dp"
           android:background="#E8E8E8"
           android:layout_width="280dp"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_marginLeft="10dp"
               android:layout_centerVertical="true"
               android:id="@+id/iconSearch"
               android:layout_width="25dp"
               android:scaleType="centerCrop"
               android:background="@android:color/transparent"
               android:layout_height="25dp"
               android:src="@drawable/ic_baseline_search_24"/>

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/iconSearch"
               android:background="@android:color/transparent"
               android:hint="Tìm Kiếm Quận/Huyện, Phường/Xã"
               android:padding="8dp"
               android:textSize="14sp" />
       </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/relativeBox"
        android:layout_below="@id/toolBar"
        android:background="#E8E8E8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/boxNextSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/getLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFF"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/txtViTri"
                    android:src="@drawable/ic_baseline_fmd_good_24" />

                <TextView
                    android:id="@+id/txtViTri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Sử dụng vị trí hiện tại của tôi" />
            </RelativeLayout>
            <RelativeLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtKhuVucChon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Khu vực được chọn"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="Thiết lập lại"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:id="@+id/boxProvice"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtKhuVucChon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/dot"
                        android:layout_marginTop="10dp"
                        android:layout_width="8dp"
                        app:cardCornerRadius="100dp"
                        android:layout_height="8dp">
                        <TextView
                            android:id="@+id/txtDotProvince"
                            android:background="#E8E8E8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nameProvince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/dot"
                        android:text="An Giang"
                        android:textColor="#000"
                        android:textFontWeight="700"
                        android:textSize="16dp" />
                    <View

                        android:layout_marginTop="5dp"
                        android:layout_below="@id/dot"
                        android:id="@+id/lineHeightProvince"
                        android:layout_width="2dp"
                        android:layout_marginLeft="3dp"
                        android:background="#E8E8E8"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/boxDistrict"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/boxProvice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/dot2"
                        android:layout_marginTop="10dp"
                        android:layout_width="8dp"
                        app:cardCornerRadius="100dp"
                        android:layout_height="8dp">
                        <TextView
                            android:id="@+id/txtDotDistrict"
                            android:background="#E8E8E8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/dot2"
                        android:text="Huyện an phú"
                        android:textColor="#000"
                        android:id="@+id/txtNameDistrict"
                        android:textFontWeight="700"
                        android:textSize="16dp" />

                    <View
                        android:id="@+id/lineHeight22"
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/dot2"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#E8E8E8" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/boxWard"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/boxDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/dot3"
                        android:layout_marginTop="10dp"
                        android:layout_width="8dp"
                        app:cardCornerRadius="100dp"
                        android:layout_height="8dp">
                        <TextView
                            android:id="@+id/txtDotWard"
                            android:background="#E8E8E8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txtNameWard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/dot3"
                        android:text="Thị trấn an phú"
                        android:textColor="#000"
                        android:textFontWeight="700"
                        android:textSize="16dp" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:text="Tỉnh/Thành phố"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boxNextSelect"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeBox" />
    <RelativeLayout
        android:id="@+id/boxProgressBar"
        android:background="#B3161c24"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ProgressBar>
    </RelativeLayout>

</RelativeLayout>