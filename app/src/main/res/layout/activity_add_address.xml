<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddAddressActivity">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/btnBackAddAddress"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_back_24_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/tenor_sans"
            android:text="Địa chỉ mới"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="20sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/toolBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:text="Liên hệ"
           android:background="#E8E8E8"
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:hint="Họ và Tên"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"/>
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:hint="Số điện thoại"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Địa chỉ"
            android:background="#E8E8E8"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/btnBoxSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:padding="15dp"
                android:text="Tỉnh/Thành phố/Huyện,Phường/Xã"
                android:textSize="14sp" />
            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/btnAddAddress"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_height="30dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"/>
        <EditText
            android:id="@+id/edtNumberTree"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:hint="Tên đường, Tòa nhà, Số nhà"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="cài đặt"
            android:background="#E8E8E8"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại địa chỉ:"/>
             <RadioGroup
                 android:id="@+id/radioTypeAddress"
                 android:layout_marginLeft="20dp"
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <RadioButton
                     android:text="Văn phòng"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <RadioButton
                     android:id="@+id/raNhaRieng"
                     android:text="Nhà riêng"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </RadioGroup>
        </LinearLayout>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"/>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt làm địa chỉ mặc định"/>

            <Switch
                android:id="@+id/swDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/containerCheckout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnCheckout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:drawablePadding="26dp"
            android:fontFamily="@font/tenor_sans"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Hoàn Thành"
            android:textColor="@color/white" />


    </FrameLayout>

   <RelativeLayout
       android:id="@+id/boxProgressBar"
       android:background="#B3161c24"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ProgressBar
           android:id="@+id/progressBar"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </ProgressBar>
   </RelativeLayout>

</RelativeLayout>