<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GetAddressActivity">
    <RelativeLayout
        android:id="@+id/rl_checkout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/tenor_sans"
            android:text="Chọn địa chỉ nhận hàng"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="18sp"

            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_checkout_container"
        android:background="#E8E8E8"
        android:padding="10dp"
        android:text="Địa chỉ" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/location"
        android:layout_above="@+id/containerCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewAddress"/>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/containerCheckout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/btnAddAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:drawablePadding="26dp"
            android:fontFamily="@font/tenor_sans"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Thêm địa chỉ mới"
            android:textColor="@color/white" />


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/boxProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3161c24">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"></ProgressBar>
    </RelativeLayout>
</RelativeLayout>