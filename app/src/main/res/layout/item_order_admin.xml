<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_store_24"
            android:id="@+id/imgIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/txtNameClient"
            android:layout_toRightOf="@id/imgIcon"
            android:fontFamily="@font/tenor_sans"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Hoàng quang linh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="Đã hủy"
            android:textColor="#E61111"
            android:fontFamily="@font/tenor_sans"
            android:textFontWeight="600"
            android:layout_centerVertical="true"
            android:id="@+id/txtStatus"/>
    </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/imgProduct"
              android:layout_width="80dp"
              android:src="@drawable/banner_item1"
              android:scaleType="centerCrop"
              android:layout_height="100dp"/>
          <TextView
              android:layout_marginLeft="16dp"
              android:layout_toRightOf="@id/imgProduct"
              android:layout_width="wrap_content"
              android:text="Tai nghe fox"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:layout_marginRight="16dp"
              android:layout_width="wrap_content"
              android:text="Tai nghe fox"
              android:layout_height="wrap_content"/>
      </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grayScale"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/tenor_sans"
            android:id="@+id/txtXemThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayScale"
            android:text="xem thêm"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:layout_marginRight="16dp"
            android:background="#DF4D1F"
            android:text="Duyệt"/>

    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grayScale"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/tenor_sans"
            android:id="@+id/txtTotalProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayScale"
            android:text="1 sản phẩm"/>
        <TextView
            android:fontFamily="@font/tenor_sans"
            android:id="@+id/txtThanhTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/txtTotalPrice"
            android:text="Thành tiên: "/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/tenor_sans"
            android:id="@+id/txtTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF1616"
            android:text="100,000đ"/>
    </RelativeLayout>
</LinearLayout>