<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/line1"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_above="@id/line2"
               android:layout_height="wrap_content">
               <ImageButton
                   android:layout_width="24dp"
                   android:id="@+id/btnCloseCart"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="16dp"
                   android:background="@android:color/transparent"
                   android:src="@drawable/ic_close"
                   android:scaleType="fitXY"
                   android:layout_height="24dp">

               </ImageButton>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="CART"
                   android:textColor="#333333"
                   android:textFontWeight="600"
                   android:textSize="20sp"
                   android:fontFamily="@font/tenor_sans"
                   android:letterSpacing="0.3"
                   android:layout_marginLeft="17dp"
                   android:layout_marginTop="14dp"
                   />
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:id="@+id/recyclerviewCart"
                   android:layout_height="wrap_content">

               </androidx.recyclerview.widget.RecyclerView>

           </LinearLayout>
           <LinearLayout
               android:id="@+id/line2"
               android:layout_alignParentBottom="true"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <View
                   android:layout_width="match_parent"
                   android:background="#000000"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="30dp"
                   android:layout_marginRight="16dp"
                   android:layout_height="1dp"/>
               <RelativeLayout
                   android:layout_marginRight="16dp"
                   android:layout_marginLeft="16dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_marginTop="16dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sub Total"
                       android:textColor="#333333"
                       android:textFontWeight="400"
                       android:textSize="14sp"
                       android:fontFamily="@font/tenor_sans"
                       />
                   <TextView
                       android:layout_alignParentRight="true"
                       android:layout_marginTop="16dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="$240"
                       android:textColor="#DD8560"
                       android:textFontWeight="400"
                       android:textSize="16sp"
                       android:fontFamily="@font/tenor_sans"
                       />

               </RelativeLayout>
               <TextView
                   android:layout_alignParentRight="true"
                   android:layout_marginTop="16dp"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="16dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="*shipping charges, taxes and discount codes   â€¨are calculated at the time of accounting. "
                   android:textColor="#888888"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   android:fontFamily="@font/tenor_sans"
                   android:layout_gravity="center"
                   />
               <ImageButton
                   android:layout_width="match_parent"
                   android:background="@android:color/transparent"
                   android:scaleType="fitXY"
                   android:src="@drawable/ic_buy_now"
                   android:layout_height="56dp"
                   android:layout_marginTop="16dp"
                   />
           </LinearLayout>
       </RelativeLayout>


</RelativeLayout>